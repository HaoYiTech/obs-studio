
<view class="top-area">
  <van-cell title="总共 {{ m_total_num }} 个直播间" icon="video-o" border="{{ true }}"
    icon-class="feed-left-icon" custom-class="feed-live">
    <van-button slot="extra" type="primary" size="small" bind:click="doAddLive">添加直播间</van-button>
  </van-cell>
</view>
<block wx:for="{{ m_arrLive }}" wx:key="index">
  <van-card
    id="{{ index }}"
    data-item="{{ item }}"
    bind:click="doModLive"
    customStyle="font-size:14px;padding:10px 15px;"
    title="{{ item.room_name }}"
    desc="教室：{{item.room_id}} - {{item.room_pass}}"
    card-time="课程：{{ item.subject_name }}"
    card-age="机构：{{ item.agent_name }}"
    tag="{{item.subject_name}}"
    lazy-load="{{ true }}"
    shop-cart="{{ false }}"
    show-arrow="{{ true }}"
    thumb="{{ m_urlSite }}{{ item.qrcode }}"
  />
</block>

<i-load-more loading="{{ m_show_more }}" tip="{{ m_no_more }}" />